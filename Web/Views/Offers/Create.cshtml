@model OffersViewModels

@{
    ViewData["Title"] = "Create";
}

<div style="margin:160px; padding:120px;font-family:Cairo">
    <h1 style="font-family:Cairo">عــرض جـديــد</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" enctype="multipart/form-data">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label>الـعرض</label>
                    <input asp-for="Offer" class="form-control"  />
                    <span asp-validation-for="Offer" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>الصورة</label>
                    <input type="file" asp-for="File" class="form-control" id="fileName" accept=".jpg,.jpeg,.png" onchange="validateFileType()" />
                    <span asp-validation-for="File" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="ImageUrl" class="form-control" />

                <div class="form-group">
                    <input type="submit" value="حــفــظ" class="btn btn-primary" />
                </div>

            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index" class="btn btn-outline-dark">الرجــوع للقائـمة السـابـقـة</a>
    </div>
</div>


@section Scripts {
    <partial name="_Validatoin" />
}
