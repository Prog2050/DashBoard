@model IEnumerable<Core.Entities.Offers>

@{
    ViewData["Title"] = "Index";
}


<div style="margin:25px; padding:120px;text-align:center;align-content:center;font-family:Cairo">

    @*<h1 style="font-family:Cairo">الأقـــســام</h1>*@
    <p style="text-align:center;margin-top:50px"> <a asp-action="Create" class="btn btn-primary">أضـافـة عـرض</a></p>

    <div class="container">

        <hr>


        <div class="row">

            <div class="col">


                <form class="box" asp-action="Search" asp-controller="Offers" method="get" style="margin-top:10px">
                    <row>
                        <input class="form-control mr-sm-2" type="search" placeholder="بــحـــث" name="term" dir="rtl" style="text-align:center">  <button style="margin:5px;width:150px" class="btn btn-outline-success" type="submit">بـحــث</button>

                    </row>
                </form>

               

                <div class="card mt-5">

                    <div class="card-header">


                        <div class="col">

                            <h4 style="text-align: center; align-content: center;font-family:Cairo">
                                الـعــروض
                            </h4>
                        </div>


                    </div>
                    <div class="card-body">
                        <ul class="list-group list-group-lg list-group-flush list my--6">
                            @foreach (var item in Model)
                            {
                                <li class="list-group-item px-0">
                                    <div class="row align-items-center">
                                        <div class="col-auto">

                                            @*<img src="@item.ImageUrl" alt="" class="avatar avatar-lg" style="width:100px; height:100px;" loading="lazy">*@
                                            <img src="~/img/offers/@item.ImageUrl" alt="" style="width:100px; height:100px;" loading="lazy">

                                        </div>
                                        <hr>
                                        <div class="col ml--6">

                                            <p class="card-text small text-muted mb-1">
                                                الـعـرض :   @item.Offer
                                            </p>

                                        </div>

                                        <div class="col-auto">
                                            <form asp-action="Edit" asp-route-id="@item.Offers_No" method="get">
                                                <button type="submit" class="btn btn-sm btn-info d-none d-md-inline-block">
                                                    تـعديـل
                                                </button>
                                            </form>
                                        </div>
                                        <div class="col-auto">
                                            <form asp-action="Details" asp-route-id="@item.Offers_No" method="get">
                                                <button type="submit" class="btn btn-sm btn-warning d-none d-md-inline-block">
                                                    تـفـاصـيل
                                                </button>
                                            </form>
                                        </div>
                                        <div class="col-auto">
                                            <form asp-action="Delete" asp-route-id="@item.Offers_No" method="get">
                                                <button type="submit" class="btn btn-sm btn-danger d-none d-md-inline-block">
                                                    حـذف
                                                </button>
                                            </form>
                                        </div>

                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>


