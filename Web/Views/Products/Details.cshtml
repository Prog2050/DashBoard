@model Core.Entities.Product

@{
    ViewData["Title"] = "Details";
}
<div style="margin:25px; padding:120px;text-align:center;align-content:center;font-family:Cairo">


    <div class="container">

        <hr>

        @*<form class="box" asp-action="Search" asp-controller="Products" method="get" style="margin-top:75px">
                <input class="form-control mr-sm-2" type="search" placeholder="مـا الـذي تـبـحـث عـنـه من الأصـنـاف" name="term" dir="rtl" style="text-align:center">
            </form>*@

        <div class="row">

            <div class="col">

                <div class="card mt-5">

                    <div class="card-header">


                        <div class="col">

                            <h4 style="text-align: center; align-content: center;font-family:Cairo">
                                تـفـاصـيـل الـصـنـف
                            </h4>
                        </div>


                    </div>
                    <div class="card-body">
                        <ul class="list-group list-group-lg list-group-flush list my--6">

                            <li class="list-group-item px-0">
                                <div class="row align-items-center">
                                    <div class="col-auto">

                                        @*<img src="@item.ImageUrl" alt="" class="avatar avatar-lg" style="width:100px; height:100px;" loading="lazy">*@
                                        <img src="~/img/product/@Model.ImageUrl" alt="" style="width:100px; height:100px;" loading="lazy">

                                    </div>
                                    <hr>
                                    <div class="col ml--6">
                                        <p class="card-text small text-muted mb-1">
                                            كــود :   @Model.Code
                                        </p>
                                        <hr>
                                        <p class="card-text small text-muted mb-1">
                                            الـصـنـف :   @Model.Items
                                        </p>
                                        <hr>
                                        <p class="card-text small text-muted mb-1">
                                            الـوصـف : @Model.Description
                                        </p>
                                        <hr>
                                        <p class="card-text small text-muted mb-1">
                                            السعر :   @Model.Price
                                        </p>
                                        <hr>
                                        @*<p class="card-text small text-muted mb-1">
            السعر قبل العرض :   @Model.Old_Price
        </p>*@


                                    </div>

                                    <div class="col-auto">
                                        <form asp-action="Edit" asp-route-id="@Model.Items_No" method="get">
                                            <button type="submit" class="btn btn-sm btn-info d-none d-md-inline-block">
                                                تـعديـل
                                            </button>
                                        </form>
                                    </div>
                                    <div class="col-auto">
                                        <form asp-action="Index">
                                            <button type="submit" class="btn btn-sm btn-warning d-none d-md-inline-block">
                                                الـرجــوع للـقـائـمة الـسـابـقة
                                            </button>
                                        </form>
                                    </div>


                                </div>
                            </li>

                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
