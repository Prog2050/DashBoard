@model ProductViewModels

@{
    ViewData["Title"] = "Create";
}
<div style="margin:160px; padding:120px;font-family:Cairo">

    <h1 style="font-family:Cairo">صـنـف جـديــد</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" enctype="multipart/form-data">
                @if (ViewBag.Message != null)
                {
                    <h5 style="font-family:Cairo" class="alert alert-danger">@ViewBag.Message</h5>
                }
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label>كـود الـصـنف</label>
                    <input asp-for="Code" class="form-control" type="number" min="0"  />
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>الـصـنـف</label>
                    <input asp-for="Items" class="form-control" />
                    <span asp-validation-for="Items" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>الـوصـف</label>
                    <textarea asp-for="Description" rows="4" cols="50" class="dform-control">
  </textarea>

                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>الـصـورة</label>
                    <input asp-for="File" class="form-control" />
                    <span asp-validation-for="File" class="text-danger"></span>
                    <input type="hidden" asp-for="ImageUrl" class="form-control" />

                </div>
                <div class="form-group">
                    <label>الــقــسم</label>
                    <select asp-for="ID_CAT" class="form-control" size="0"
                            asp-items="@(new SelectList (Model.Category,"Cat_No","Cat"))"></select>
                    <span asp-validation-for="ID_CAT" class="text-danger"></span>
                </div>
                @*<div class="form-group">
                    <label>الــعــرض</label>
                    <select asp-for="ID_Offer" class="form-control" size="0"
                            asp-items="@(new SelectList (@Model.Offers,"Offers_No","Offer"))"></select>

                    <span asp-validation-for="ID_Offer" class="text-danger"></span>
                </div>*@

                <div class="form-group">
                    <label>السـعر</label>
                    <input asp-for="Price" type="number" min="1" maxlength="5" class="form-control"step="any" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                @*<div class="form-group">
                    <label>الـسـعر قـبـل الـعرض</label>
                    <input asp-for="Old_Price" type="number" min="1" maxlength="5" class="form-control" />
                    <span asp-validation-for="Old_Price" class="text-danger"></span>
                </div>*@



                <div class="form-group">
                    <input type="submit" value="حــفــظ" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index" class="btn btn-outline-dark">الــرجــوع للـقـائـمة الـسـابـقـة</a>
    </div>



</div>
@section Scripts {
    <partial name="_Validatoin" />
}