@model ProductViewModels

@{
    ViewData["Title"] = "Edit";
}
<div style="margin:160px; padding:120px;font-family:Cairo">
    <h1 style="font-family: Cairo">تــعديــل الأصــنــاف</h1>

    <hr />
    <div class="row">
        <div class="col-md-4" style="font-family:Cairo">
            <form asp-action="Edit" enctype="multipart/form-data">
                @if (ViewBag.Message != null)
                {
                    <h5 class="alert alert-danger">@ViewBag.Message</h5>
                }

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Items_No" />
                <div class="form-group">
                    <label>كـود</label>
                    <input asp-for="Code" class="form-control" />
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>الـصـنف</label>
                    <input asp-for="Items" class="form-control" />
                    <span asp-validation-for="Items" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>الـوصــف</label>
                    <textarea asp-for="Description" rows="4" cols="50" class="dform-control">
  </textarea>

                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>الـصــورة</label>
                    <input asp-for="File" type="file" class="form-control" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    <input type="hidden" asp-for="ImageUrl" class="form-control" />
                </div>
                <div class="form-group">
                    <label>الـسـعر</label>
                    <input asp-for="Price" type="number" min="1" maxlength="5"  class="form-control"step="any"  />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
