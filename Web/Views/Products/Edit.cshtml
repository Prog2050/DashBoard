                <div class="form-group">
                    <label>الـقـسم</label>
                    <select asp-for="ID_CAT" class="form-control" size="0"
                            asp-items="@(new SelectList (Model.Category,"Cat_No","Cat"))"></select>
                    <span asp-validation-for="ID_CAT" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="حــفــظ" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index" class="btn btn-outline-dark">الـرجــوع للـقـائـمة الـسـابـقة</a>
    </div>


</div>