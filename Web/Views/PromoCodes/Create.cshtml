@model Core.Entities.PromoCode


<div style="margin:160px; padding:120px;font-family:Cairo">
    <h1 style="font-family:Cairo">بـرمـوكــود</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" enctype="multipart/form-data">
                @if (ViewBag.Message != null)
                {
                    <h5 class="alert alert-danger">@ViewBag.Message</h5>
                }
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label>كـود الـخـصم</label>
                    <input asp-for="Code" class="form-control" />
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>مـبـلـغ الـخـصم</label>
                    <input asp-for="Discount" class="form-control" />
                    <span asp-validation-for="Discount" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="حــفـظ" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index" class="btn btn-dark">الـرجــوع للـقـائـمة الـسـابـقـة</a>
    </div>


</div>

@section Scripts {
    <partial name="_Validatoin" />
}