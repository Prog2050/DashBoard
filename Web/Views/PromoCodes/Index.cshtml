@model IEnumerable<Core.Entities.PromoCode>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div style="margin:25px; padding:120px;text-align:center;align-content:center;font-family:Cairo">

    @*<h1 style="font-family:Cairo">الأقـــســام</h1>*@
    <p style="text-align:center;margin-top:50px"> <a asp-action="Create" class="btn btn-primary">أضـافـة بروموكود</a></p>

    <div class="container">

        <hr>


        <div class="row">

            <div class="col">


                @*<form class="box" asp-action="Search" asp-controller="PromoCode" method="get" style="margin-top:10px">
                    <row>
                        <div class="btn-group">
                            <button style="margin-right:5px;width:150px" class="btn btn-outline-success" type="submit">بـحــث</button>
                            <input class="form-control mr-sm-2" type="search" placeholder="مـا الـذي تـبـحـث عـنـه" name="term" dir="rtl" style="text-align:center">

                        </div>
                    </row>
                </form>*@



                <div class="card mt-5">

                    <div class="card-header">


                        <div class="col">

                            <h4 style="text-align: center; align-content: center;font-family:Cairo">
                                بـرومـوكـود
                            </h4>
                        </div>


                    </div>
                    <div class="card-body">
                        <ul class="list-group list-group-lg list-group-flush list my--6">
                            @foreach (var item in Model)
                            {
                                <li class="list-group-item px-0">
                                    <div class="row align-items-center">

                                        <hr>
                                        <div class="col ml--6">

                                            <p class="card-text small text-muted mb-1">
                                                كـود الـخـصم :   @item.Code
                                            </p>

                                        </div>
                                        <div class="col ml--6">

                                            <p class="card-text small text-muted mb-1">
                                                مبلغ الـخـصم :   @item.Discount
                                            </p>

                                        </div>
                                        <div class="col-auto">
                                            <form asp-action="Edit" asp-route-id="@item.ID" method="get">
                                                <button type="submit" class="btn btn-sm btn-info d-none d-md-inline-block">
                                                    تـعديـل
                                                </button>
                                            </form>
                                        </div>
                                        <div class="col-auto">
                                            <form asp-action="Details" asp-route-id="@item.ID" method="get">
                                                <button type="submit" class="btn btn-sm btn-warning d-none d-md-inline-block">
                                                    تـفـاصـيل
                                                </button>
                                            </form>
                                        </div>
                                        <div class="col-auto">
                                            <form asp-action="Delete" asp-route-id="@item.ID" method="get">
                                                <button type="submit" class="btn btn-sm btn-danger d-none d-md-inline-block">
                                                    حـذف
                                                </button>
                                            </form>
                                        </div>

                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
