@model PromoCodeViewModel


@{
    ViewData["Title"] = "Edit";
}
<div style="margin:160px; padding:120px;font-family:Cairo">
 <h1 style="font-family:Cairo">تـعديـل الـبـرمـوكـود</h1>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ID" />
                <div class="form-group">
                    <label asp-for="Code" class="control-label">كود الخصم</label>
                    <input asp-for="Code" class="form-control" />
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Discount" class="control-label">مبلغ الخصم</label>
                    <input asp-for="Discount" class="form-control" />
                    <span asp-validation-for="Discount" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="حــفـظ" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">الـرجــوع للـقـائـمة الـسـابـقـة</a>
    </div>


</div>