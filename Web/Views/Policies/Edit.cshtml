@model PoliciesViewModels

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div style="margin:160px; padding:120px;font-family:Cairo">
    <h1 style="font-family:Cairo">تـعديـل خـدمة التوصـيـل</h1>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ID" />
           
                <div class="form-group">
                    <label asp-for="HD" class="control-label">مبلغ  خـدمة التوصـيـل</label>
                    <input asp-for="HD" class="form-control" />
                    <span asp-validation-for="HD" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="حــفـظ" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">الـرجــوع للـقـائـمة الـسـابـقـة</a>
    </div>


</div>